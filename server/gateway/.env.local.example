# =============================================================================
# GATEWAY LOCAL DEVELOPMENT
# =============================================================================
# Dùng khi chạy `pnpm start:dev` trực tiếp (không qua Docker)
# =============================================================================

NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# Database - localhost vì chạy ngoài Docker
DATABASE_URL=postgresql://root:123456@localhost:5433/nckh?sslmode=disable

# JWT - Copy từ root .env
JWT_ACCESS_SECRET=super_secret_key_cho_do_an_nckh_2025_access_token_32chars
JWT_REFRESH_SECRET=super_secret_key_cho_do_an_nckh_2025_refresh_token_32chars
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Redis - localhost
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_ACCESS_TOKEN_TTL=900
REDIS_REFRESH_TOKEN_TTL=604800

# RabbitMQ - localhost  
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# gRPC Worker - localhost
GRPC_AUTH_URL=localhost:50051
